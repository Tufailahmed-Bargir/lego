  <body>
    <style>
        img{
           
           width: 36px;
           height: 36px;
           padding: 5px;
       }
       *{
           padding: 0;
           margin: 0;
       }
       .left{
           padding-left: 200px;
           padding-left: 10px;
           font-size: 20px;
             font-weight: bold; 
             display: flex;
             align-items: center;
             justify-content: center;
             
            /* font-style: ; */
            font-family: sans-serif;
       }
       nav{
           padding-left: 10px;
           display: flex;
           justify-content: space-between;
           background-color:#2A1D4A;
           color:white;
           width: 100%;
           height: 80px;
           align-items: center;
       }
       .container{
           display: flex;
           justify-content: space-evenly;
            padding-right: 100px;
       }
       .items{
           padding: 20px;
           margin: 10px;
           color: rgb(170, 166, 195);
           font-weight: 500;
           font-size: 20px;
           font-style: normal;
           
           /* padding-right: 100px; */
           font-family: sans-serif;
       }
       .items:hover{
           color: white;
       }
      .navbar{
        color: red;
      }
      body{
  background-color: #100D25;
  color:white;
}
#card2{
  background-color:#100D25;
}
