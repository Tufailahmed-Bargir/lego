    <!-- navbar code goes here -->
    <nav>
        
      <div class="left">
          <img src="./logoM.png" alt=""> 
          LegoConverter</div>
      <div class="right">
          <div class="container">
              <div class="items"><button class="btn btn btn-success" style="color: red;"><a href="/" style="text-decoration: none; color: white;">Back</a></button></div>
              <!-- <div class="items"><a href=""></a></div> -->
             
          </div>
      </div>
  </nav>
    <div class="container mt-4">
      <div class="card " id="card2">
        <div class="card-body">
          <h2 style="color: white;">History : </h2>
          <% data.forEach(function(item) { %>
            <div class="card mt-4" >
              <div class="card-body"   >
          <h5>Question:</h5>
          <h6><%= item.question %></h6>
          <br />

          <h5>The Converted Code is :</h5>
          <h6><%= item.code %></h6>
          <br />
        <h5>The Documentation is :</h5>
        <h6><%= item.documentation %></h6>
    </div>
    </div>
  <% }); %>
</div>
</div>
