            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
      <form action="/submit" method="post"  >
         
      <!-- next to navbar -->
      <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto " src="https://1000logos.net/wp-content/uploads/2023/02/ChatGPT-Logo.png" alt="" width="150" height="70">
        <h1 class="display-5 fw-bold text-body-emphasis">Legacy code converter</h1>
        <h2>convert the legacy code into modern code in ease</h2>
       <div class="container">
        <select name="type1" id="form1">
          <option value="val1">Enter the legacy codebase langauge</option>
          <option value="Cobol">Cobol</option>
          <option value="VB">VB</option>
          <option value="Delphi">Delphi</option>
          <!-- <option value="val1"></option> -->
        </select>
        
        <input type="text"placeholder="Enter the legacy code here" name="input" id="input" >
      </form>
        <select name="type2" id="form2">
          <option value="val1">Enter the modern langauge</option>
          <option value="C#">C#</option>
          <option value="Java">Java</option>
          <option value="Python">Python</option>
          <option value="C">C</option>
          <option value="C++">C++</option>
          <option value="javascript">Javascript</option>
        </select>
       </div>
       <div class="containerr">

        <% if (  locals.code ) { %>
       <div class="card"id="card1">
        <div class="card-body">
          <h2>The Converted Code is :</h2> <br>
          <pre><code><%= code %></code></pre>
        </div>
        </div>
        <% } %>


        <% if (  locals.doc ) { %>
        <div class="card" id="card2">
          <div class="card-body">
            <h2>  The Code Documentation is :</h2> <br>
          
           <%= doc %>
          </div>
          </div>
          <% } %>

        <!-- <div class="card">
          <div class="card-body">
            This is some text within a card body.
          </div> -->


      </div>
      </div>
