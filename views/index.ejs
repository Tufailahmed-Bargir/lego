          #input{
            /* height: 50px; */
            padding: 5px;margin: 5px;
            width: 60%;
            border-radius: 5px;
            /* border: solid red; */
          }
          #form1,#form2{
            border-radius: 5px;
            padding: 5px;margin: 5px;
            width:20%;
            /* border: solid red; */
          }
        </style>
     
           
     
     
           

